{
  "name": "khtrm-system-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "KHTRM System Frontend - Vue 3 Application for Transport Fleet Management",
  "author": "KHTRM Team <admin@khtrm-system.com>",
  "license": "MIT",
  "keywords": [
    "khtrm",
    "transport",
    "fleet",
    "management",
    "vue",
    "frontend"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "check:all": "npm run lint && npm run format",
    "fix:all": "npm run lint && npm run format",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "axios": "^1.6.2",
    "date-fns": "^3.0.6",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5",
    "vue-toastification": "^2.0.0-rc.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.0.12",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^1.1.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.1",
    "c8": "^9.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "jsdom": "^23.2.0",
    "prettier": "^3.1.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.11",
    "vitest": "^1.1.3",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
